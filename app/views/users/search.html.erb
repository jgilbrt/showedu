<h1>Search Users</h1>

<%= form_with url: search_users_path, method: :get, local: true do |form| %>
  <%= form.label :query, "Username" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% if @users.present? %>
  <h2>Results:</h2>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.username, user_path(user.username) %></li>
    <% end %>
  </ul>
<% elsif params[:query].present? %>
  <p>No users found.</p>
<% end %>
